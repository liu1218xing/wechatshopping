.hot-card{
  position: relative;
  margin: 32rpx 52rpx 0;
  height: 326rpx;
  background: #FFFFFF;
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.02);
  border-radius: 13rpx;
}
.hot-name{
  display: flex;
  position: absolute;
  align-items: center;
  left: 44rpx;
  top: 41rpx;
  width: 300rpx;
}
.hot-name-line{
  height: 24rpx;
  width: 39rpx;
}
.hot-info{
  position: absolute;
  width: 259rpx;
  height: 188rpx;
  left: 42rpx;
  bottom: 0;
}
.hot-image{
  position: absolute;
  width: 241rpx;
  top: 53rpx;
  right: 47rpx;
  height: 241rpx;
}
.hot-name-text{
  margin: 0 20rpx;
  font-size: 28rpx;
  line-height: 39rpx;
  font-weight: bold;
}
.list-title{
  display: flex;
  text-align: center;
  align-items: center;
  justify-content: center;
  margin: 90rpx 0 35rpx;
}
.list-title-line{
  height: 21rpx;
  width: 34rpx;
}

.list-title-text{
  margin: 0 20rpx;
  font-size: 28rpx;
  line-height: 39rpx;
  font-weight: bold;
}
.product-meta{
  display: flex;
  align-items: center;
  margin: 9rpx 21rpx 15rpx;
}
.product-row{
  display: flex;
  justify-content: space-around;
  margin: 0 52rpx 28rpx;
}
.product-card{
  flex: 1;
  background: #FFFFFF;
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.02);
  border-radius: 13rpx;
}
.product-card:first-child{
  margin-right: 27rpx;
}
.product-image{
  width: 100%;
  border-radius: 13rpx 13rp 0 0;
}
.product-money,
.product-add{
  width: 36rpx;
  height: 36rpx;
  line-height: 36rpx;
  text-align: center;
  border-radius: 50%;
  font-weight: 900;
  background: #F7E687;
}
.product-money{
  font-size: 24rpx;
}
.product-add{
  font-size: 32rpx;
}
.product-price{
  flex: 1;
  margin: 0 10rpx;
  font-size: 28rpx;
}
