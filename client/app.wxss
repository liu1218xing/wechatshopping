/**app.wxss**/
page {
  background: #f9f9f9;
}
.bg {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 144rpx;
  z-index: -1;
}
.unlogin-card{
  display: flex;
  align-items: center;
  margin: 50rpx 27rpx 0;
  height: 200rpx;
  background: #FFFFFF;
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.02);
  border-radius: 13rpx;
}
.unlogin-head{
  flex-shrink: 0;
  height: 100rpx;
  width: 100rpx;
  border-radius: 50%;
  background: #F5E069;
  margin-left: 53rpx;
}
.unlogin-info{
  flex: 1;
  margin-left: 31rpx;
}
.unlogin-text{
  line-height: 48rpx;
  font-size: 34rpx;
  color: rgba(29, 29, 38, 0.8);
  font-weight: bold;
}
.unlogin-tips{
  font-size: 24rpx;
  color: #8B8B8B;
  margin-top: 6rpx;
  line-height: 33rpx;
}
.unlogin-btn{
  margin: 34rpx auto 0;
  background: #F5E069;
  font-size: 34rpx;
  line-height: 80rpx;
  height: 80rpx;
  width: 250rpx;
  border-radius: 15rpx;
  text-align: center;
  color: #34373D;
  font-weight: bold;
}